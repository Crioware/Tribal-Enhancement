<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrow_Short</defName>
    <label>shortbow arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>11</damageAmountBase>
      <speed>55</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Bow_Short</defName>
    <label>short bow</label>
    <description>A simple short bow. Quick to draw and easy to handle. Great for inexperienced shooters.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/BowShort</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>BowSmall</soundInteract>
    <costList>
      <WoodLog>30</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>9000</WorkToMake>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.89</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>1.66</RangedWeapon_Cooldown>
      <Weapon_Bulk>1.0</Weapon_Bulk>
    </statBases>
    <weaponTags>
      <li>NeolithicRanged</li>
      <li>NeolithicRangedBasic</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_Short</defaultProjectile>
        <warmupTime>1.35</warmupTime>
        <range>26</range>
        <soundCast>BowSmall</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>

