<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Pilum_Thrown</defName>
    <label>pilum</label>
    <graphicData>
      <texPath>Things/Projectile/Pilum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>true</flyOverhead>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>30</damageAmountBase>
      <speed>44</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Pila</defName>
    <label>pila</label>
    <description>Pila are spears for throwing. They're awkward to use but even one hit can do heavy damage. Can be thrown over walls, although accuracy isn't guaranteed when doing so.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/Pilum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costList>
      <WoodLog>70</WoodLog>
    </costList>
    <statBases>
      <WorkToMake>13000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.91</AccuracyTouch>
      <AccuracyShort>0.81</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.42</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
      <Weapon_Bulk>1.0</Weapon_Bulk>
    </statBases>
    <weaponTags>
      <li>NeolithicRanged</li>
      <li>NeolithicRangedHeavy</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>ElectricSmithy</li>
        <li>FueledSmithy</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Pilum_Thrown</defaultProjectile>
        <warmupTime>4.0</warmupTime>
        <range>20</range>
        <soundCast>Interact_BeatFire</soundCast>
		<requireLineOfSight>false</requireLineOfSight>
      </li>
    </verbs>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
